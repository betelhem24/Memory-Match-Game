{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "outDir": "./scripts",
    "rootDir": "./scripts",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2015", "DOM"],
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules"]
}